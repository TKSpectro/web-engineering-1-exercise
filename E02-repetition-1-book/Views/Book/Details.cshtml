@model Book

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Author</dt>
        <dd>@Model.Author</dd>

        <dt>ISBN</dt>
        <dd>@Model.ISBN</dd>

        <dt>Published</dt>
        <dd>@Model.Published.ToShortDateString()</dd>

        <dt>Edition</dt>
        <dd>@Model.Edition</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to book list", "List")
</p>